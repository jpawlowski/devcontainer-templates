// More info about devcontainer.json: https://containers.dev/implementors/json_reference/
{
	"name": "ğŸ§‘â€ğŸ’¼ M365 Admin",
	"image": "ghcr.io/workoho/devcontainers/m365-admin:${templateOption:imageVersion}",
  // ğŸ‘† This pre-built image includes PowerShell and common PowerShell modules already.

	// ğŸ‘‡ Additional Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
  "features": {
    // Azure CLI with some extensions
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest",
      "extensions": "account, automation, azure-devops, functionapp, log-analytics, resource-graph, ssh",
      "installBicep": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }

    // ğŸ‘‡ Uncomment to install additional PowerShell modules and scripts to the container
    // "ghcr.io/jpawlowski/devcontainer-features/powershell-extended:1": {
    //   "repositories": "",
    //   "resources": ""
    // }

    // ğŸ‘‡ Uncomment to add PnP CLI for Microsoft 365 to the container
    // "ghcr.io/jpawlowski/devcontainer-features/cli-microsoft365:1": {
    //   "version": "latest"
    // }

    // ğŸ‘‡ Uncomment to add PnP.PowerShell to the container
    // "ghcr.io/jpawlowski/devcontainer-features/pnp.powershell:1": {
    //   "version": "latest"
    // }
  },

	// ğŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// ğŸ‘‡ Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "",

	"customizations": {
    // ğŸ‘‡ Configure VS Code specific properties.
    "vscode": {
			"settings": {
			  "debug.openDebug": "neverOpen",
			  "editor.formatOnType": true,
			  "editor.formatOnPaste": true,
			  "editor.mouseWheelZoom": true,
			  "editor.tabCompletion": "on",
			  "window.zoomLevel": 0,
			  "workbench.iconTheme": "vscode-icons"
			},
      "extensions": [
        "DavidAnson.vscode-markdownlint",
        "editorconfig.editorconfig",
        "lizebang.bash-extension-pack",
        "ms-vscode.azurecli"
      ]
		}
	},

	// ğŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"

	// ğŸ‘‡ Set environment variables that should apply to the entire container
	"containerEnv": {
		"POWERSHELL_UPDATECHECK": "${templateOption:powerShellUpdatecheck}",
		"POWERSHELL_TELEMETRY_OPTOUT": "${templateOption:powerShellTelemetryOptOut}"
	}

	// ğŸ‘‡ Set environment variables for VS Code and related sub-processes (terminals, tasks, debugging, etc.)
	// "remoteEnv": {
	//     "PATH": "${containerEnv:PATH}:/some/other/path"
	// }
}